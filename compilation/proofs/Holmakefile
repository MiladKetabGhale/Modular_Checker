INCLUDES = .. $(CAKEMLDIR)/compiler/proofs $(CAKEMLDIR)/compiler/backend/x64/proofs
OPTIONS = QUIT_ON_FAILURE

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS0 = $(patsubst %Theory.sml,,$(THYFILES))
TARGETS = $(patsubst %.sml,%.uo,$(TARGETS0))
all: $(TARGETS)
.PHONY: all

ifdef POLY
HOLHEAP = heap
PARENT_HOLHEAP = ../heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o
all: $(HOLHEAP)

BARE_DEPS = $(CAKEMLDIR)/compiler/proofs/compilerProofTheory\
						$(CAKEMLDIR)/compiler/backend/x64/proofs/x64_configProofTheory\
						../check_countCompileTheory

DEPS = $(patsubst %,%.uo,$(BARE_DEPS)) $(PARENTHEAP)

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b $(PARENT_HOLHEAP) -o $(HOLHEAP) $(DEPS)
endif
